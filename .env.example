# Security
JWT_SECRET_KEY=change-me-in-production-use-strong-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
POSTGRES_USER=sentio
POSTGRES_PASSWORD=sentio
POSTGRES_DB=sentio
DATABASE_URL=postgresql://sentio:sentio@postgres:5432/sentio

# Storage Backends
VICTORIAMETRICS_URL=http://victoriametrics:8428
LOKI_URL=http://loki:3100
TEMPO_URL=http://tempo:3200

# Cache and Queue
REDIS_URL=redis://redis:6379

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Optional: External URLs for production
# EXTERNAL_API_URL=https://api.yourdomain.com
# EXTERNAL_DASHBOARD_URL=https://dashboard.yourdomain.com

# Optional: TLS Configuration
# TLS_ENABLED=true
# TLS_CERT_PATH=/app/certs/cert.pem
# TLS_KEY_PATH=/app/certs/key.pem

# Optional: Logging
# LOG_LEVEL=INFO

# Optional: AI Engine Configuration
# AI_MODEL_PATH=/app/models
# AI_ANOMALY_THRESHOLD=0.8
# AI_TRAIN_INTERVAL=86400  # seconds (24 hours)

# Optional: Retention Policies
# METRICS_RETENTION_MONTHS=12
# LOGS_RETENTION_DAYS=31
# TRACES_RETENTION_DAYS=7
